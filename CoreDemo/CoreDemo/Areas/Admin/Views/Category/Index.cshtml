
@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<EntityLayer.Concrete.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<h1>Index</h1>

<table class="table table-bordered">
    <tr>
        <td>#</td>
        <td>Kategori Adı</td>
        <td>Pasif yap</td>
        <td>Aktif yap</td>
        <td>Düzenle</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.CategoryID</th>
            <td>@item.CategoryName</td>
            <td><a href="/Admin/Category/CategoryDelete/@item.CategoryID" id="DeleteBtn" onclick="return confirm("Silmek istediğinize emin misiniz") class="btn btn-info">Pasif Yap</a></td>
            <td><a href="#" class="btn btn-primary">Aktif Yap</a></td>
            <td><a href="#" class="btn btn-success">Düzenle</a></td>
            
        </tr>

    }
</table>
<br />
<a href="/Admin/Category/AddCategory/" class="btn btn-primary">Yeni Kategori Ekle</a>
<br />
@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new {page}))
